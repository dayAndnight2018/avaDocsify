                        <Style Selector="TextBlock">
                            <Setter Property="FontFamily" Value="楷体-简,娃娃体-简,苹方,苹方-简,Microsoft YaHei,Simsun,宋体-简" />
                            <Setter Property="FontSize" Value="16" />
                        </Style>
                    
                        <Style Selector="ctxt|CBold">
                            <Setter Property="FontFamily" Value="楷体-简,娃娃体-简,苹方,苹方-简,Microsoft YaHei,Simsun,宋体-简" />
                            <Setter Property="Foreground" Value="DarkBlue" />
                        </Style>
                    
                        <Style Selector="ctxt|CTextBlock">
                            <Setter Property="FontFamily" Value="楷体-简,娃娃体-简,苹方,苹方-简,Microsoft YaHei,Simsun,宋体-简" />
                            <!-- <Setter Property="Foreground" Value="{Binding Path=markdownForeground}" /> -->
                            <Setter Property="FontSize" Value="16" />
                            <Setter Property="Margin" Value="20 5 0 5" />
                        </Style>
                    
                        <Style Selector=".List ctxt|CTextBlock">
                            <Setter Property="Margin" Value="5 10 0 10" />
                        </Style>
                    
                        <!-- h1 -->
                        <Style Selector="ctxt|CTextBlock.Heading1">
                            <Setter Property="Foreground" Value="{Binding Path=MarkdownH1Foreground}" />
                            <Setter Property="FontSize" Value="36" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Background" Value="{Binding Path=MarkdownH1Background}" />
                            <Setter Property="Margin" Value="10 60 5 30" />
                            <Setter Property="Effect">
                                <DropShadowEffect Color="Silver" BlurRadius="4" OffsetX="5" OffsetY="5">
                                    
                                </DropShadowEffect>
                            </Setter>
                        </Style>
                    
                        <!-- h2 -->
                        <Style Selector="ctxt|CTextBlock.Heading2">
                            <Setter Property="Foreground" Value="{Binding Path=MarkdownH2Foreground}" />
                            <Setter Property="FontSize" Value="32" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Background" Value="{Binding Path=MarkdownH2Background}" />
                            <Setter Property="Margin" Value="10 40 5 20" />
                            <Setter Property="Effect">
                                <DropShadowEffect Color="Silver" BlurRadius="4" OffsetX="5" OffsetY="5">
                                    
                                </DropShadowEffect>
                            </Setter>
                        </Style>
                    
                        <!-- h3 -->
                        <Style Selector="ctxt|CTextBlock.Heading3">
                            <Setter Property="Foreground" Value="{Binding Path=MarkdownH3Foreground}" />
                            <Setter Property="FontSize" Value="28" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Background" Value="{Binding Path=MarkdownH3Background}" />
                            <Setter Property="Margin" Value="10 20 5 10" />
                            <Setter Property="Effect">
                                <DropShadowEffect Color="Silver" BlurRadius="4" OffsetX="5" OffsetY="5">
                                    
                                </DropShadowEffect>
                            </Setter>
                        </Style>
                    
                        <!-- h4 -->
                        <Style Selector="ctxt|CTextBlock.Heading4">
                            <Setter Property="Foreground" Value="{Binding Path=MarkdownH4Foreground}" />
                            <Setter Property="FontSize" Value="24" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Background" Value="{Binding Path=MarkdownH4Background}" />
                            <Setter Property="Margin" Value="10 10 5 5" />
                            <Setter Property="Effect">
                                <DropShadowEffect Color="Silver" BlurRadius="4" OffsetX="5" OffsetY="5">
                                    
                                </DropShadowEffect>
                            </Setter>
                        </Style>
                    
                        <!-- h5 -->
                        <Style Selector="ctxt|CTextBlock.Heading5">
                            <Setter Property="Foreground" Value="{Binding Path=MarkdownH5Foreground}" />
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Background" Value="{Binding Path=MarkdownH5Background}" />
                            <Setter Property="Margin" Value="10 10 5 5" />
                        </Style>
                    
                        <!-- h6 -->
                        <Style Selector="ctxt|CTextBlock.Heading6">
                            <Setter Property="Foreground" Value="{Binding Path=MarkdownH6Foreground}" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Background" Value="{Binding Path=MarkdownH6Background}" />
                            <Setter Property="Margin" Value="10 10 5 5" />
                        </Style>

                        <Style Selector="Border.Blockquote">
                            <Style.Setters>
                                <Setter Property="Margin" Value="20 10" />
                                <Setter Property="BorderBrush" Value="{Binding Path=MarkdownBlockQuoteHeadBrush}" />
                                <Setter Property="BorderThickness" Value="5,0,0,0" />
                                <Setter Property="Background" Value="{Binding Path=MarkdownBlockQuoteBackground}" />
                            </Style.Setters>
                        </Style>

                        <Style Selector="StackPanel.Blockquote">
                            <Style.Setters>
                                <Setter Property="Margin" Value="10 10" />
                                <Setter Property="Background" Value="{Binding Path=MarkdownBlockQuoteBackground}" />
                            </Style.Setters>
                        </Style>

                        <Style Selector="ctxt|CTextBlock.Note">
                            <Setter Property="Margin" Value="20 10" />
                            <Setter Property="Background" Value="{Binding Path=MarkdownNoteBackground}" />
                            <Setter Property="Foreground" Value="{Binding Path=MarkdownNoteForeground}" />
                        </Style>

                        <Style Selector="Border.Table">
                            <Style.Setters>
                                <Setter Property="Margin" Value="20 10" />
                                <Setter Property="Padding" Value="5" />
                                <Setter Property="BorderThickness" Value="0.5" />
                                <Setter Property="BorderBrush" Value="{Binding Path=MarkdownTableBorderBrush}" />
                            </Style.Setters>
                        </Style>

                        <Style Selector="Grid.Table > Border">
                            <Style.Setters>
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="BorderThickness" Value="0.5" />
                                <Setter Property="BorderBrush" Value="{Binding Path=MarkdownTableBorderBrush}" />
                                <Setter Property="Padding" Value="13, 6" />
                            </Style.Setters>
                        </Style>

                        <!-- table header -->
                        <Style Selector="Border.TableHeader">
                            <Style.Setters>
                                <Setter Property="Background" Value="{Binding Path=MarkdownTableHeadBackground}" />
                                <!-- <Setter Property="Foreground" Value="{Binding Path=markdownTableHeadForeground}" /> -->
                            </Style.Setters>
                        </Style>
                    
                        <Style Selector="Border.TableHeader ctxt|CTextBlock">
                            <Style.Setters>
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style.Setters>
                        </Style>

                        <!-- OddTableRow -->
                        <Style Selector="Border.OddTableRow">
                            <Style.Setters>
                                <Setter Property="Background" Value="{Binding Path=MarkdownTableOddRowBackground}" />
                            </Style.Setters>
                        </Style>

                        <!-- EvenTableRow -->
                        <Style Selector="Border.EvenTableRow">
                            <Style.Setters>
                                <Setter Property="Background" Value="{Binding Path=MarkdownTableEvenRowBackground}" />
                            </Style.Setters>
                        </Style>

                        <!-- OddTableRow -->
                        <Style Selector=".OddTableRow ctxt|CTextBlock">
                            <Style.Setters>
                                <Setter Property="Foreground" Value="{Binding Path=MarkdownTableOddRowForeground}" />
                            </Style.Setters>
                        </Style>

                        <!-- EvenTableRow -->
                        <Style Selector="Border.EvenTableRow ctxt|CTextBlock">
                            <Style.Setters>
                                <Setter Property="Foreground" Value="{Binding Path=MarkdownTableEvenRowForeground}" />
                            </Style.Setters>
                        </Style>

                        <Style Selector="Border.CodeBlock">
                            <Style.Setters>
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Padding" Value="10" />
                                <Setter Property="Margin" Value="20 10" />
                                <Setter Property="Background" Value="{Binding Path=MarkdownCodeBlockBackground}" /> 
                                <Setter Property="CornerRadius" Value="5" />
                            </Style.Setters>
                        </Style>
                    
                    
                        <Style Selector="TextBlock.CodeBlock">
                            <Style.Setters>
                                <Setter Property="Foreground" Value="{Binding Path=MarkdownCodeBlockForeground}" />
                                <Setter Property="FontFamily" Value="楷体-简,娃娃体-简,苹方,苹方-简,Microsoft YaHei,Simsun,宋体-简" />
                                <Setter Property="FontSize" Value="12"/>
                            </Style.Setters>
                        </Style>
                    
                        <Style Selector="edit|TextEditor">
                            <Style.Setters>
                                <Setter Property="Foreground" Value="{Binding Path=MarkdownCodeBlockForeground}" />
                                <Setter Property="FontFamily" Value="楷体-简,娃娃体-简,苹方,苹方-简,Microsoft YaHei,Simsun,宋体-简" />
                            </Style.Setters>
                        </Style>

                        <!-- 引用 -->
                        <Style Selector="ctxt|CCode">
                            <Style.Setters>
                                <Setter Property="Foreground" Value="{Binding Path=MarkdownQuoteForeground}" />
                                <Setter Property="Background" Value="{Binding Path=MarkdownQuoteBackground}" />
                                <Setter Property="CornerRadius" Value="5" />
                                <Setter Property="Padding" Value="5 2 5 2" />
                                <!-- <Setter Property="MonospaceFontFamily" Value="苹方,苹方-简,Microsoft YaHei,Simsun,宋体-简" /> -->
                                <Setter Property="MonospaceFontFamily" Value="楷体-简,娃娃体-简,苹方,苹方-简,Microsoft YaHei,Simsun,宋体-简" />
                                <Setter Property="FontWeight" Value="300" />
                            </Style.Setters>
                        </Style>

                        <Style Selector="ctxt|CCode.CTextBlock">
                            <Style.Setters>
                                <!-- <Setter Property="FontFamily" Value="苹方,苹方-简,Microsoft YaHei,Simsun,宋体-简" /> -->
                                <Setter Property="FontFamily" Value="楷体-简,娃娃体-简,Microsoft YaHei,Simsun,苹方,苹方-简,宋体-简" />
                                <Setter Property="FontWeight" Value="300" />
                            </Style.Setters>
                        </Style>

                        <!-- style for urls [link](htttp://www.xxx.com)-->
                        <Style Selector="ctxt|CHyperlink">
                            <Style.Setters>
                                <Setter Property="IsUnderline" Value="true" />
                                <Setter Property="Foreground" Value="{Binding Path=MarkdownUrlForeground}" />
                                <Setter Property="HoverForeground" Value="{Binding Path=MarkdownUrlHoverForeground}" />
                            </Style.Setters>
                        </Style>

                        <Style Selector="mdctl|Rule.Single">
                            <Setter Property="Margin" Value="5 10" />
                            <Setter Property="Foreground" Value="{Binding Path=MarkdownLineForeground}" />
                        </Style>

                        <Style Selector="mdctl|Rule.TwoLines">
                            <Setter Property="Margin" Value="5 10" />
                            <Setter Property="Foreground" Value="{Binding Path=MarkdownLineForeground}" />
                        </Style>

                        <Style Selector="mdctl|Rule.Bold">
                            <Setter Property="Margin" Value="5 10" />
                            <Setter Property="Foreground" Value="{Binding Path=MarkdownLineForeground}" />
                        </Style>

                        <Style Selector="mdctl|Rule.BoldWithSingle">
                            <Setter Property="Margin" Value="5 10" />
                            <Setter Property="Foreground" Value="{Binding Path=MarkdownLineForeground}" />
                        </Style>

                    </avalonia:MarkdownScrollViewer.Styles>
                </avalonia:MarkdownScrollViewer>
                <!-- </StackPanel> -->
            </Grid>
            
            <!--  底部提示 -->
            <StackPanel Classes="infoBar" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                <Label Foreground="black" Padding="5" Name="infoBar">启动完成</Label>
            </StackPanel>
        </Grid>
    </Border>
    
</Window>