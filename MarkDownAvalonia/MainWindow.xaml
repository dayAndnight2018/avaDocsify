        xmlns:avalonia="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
        xmlns:ctxt="clr-namespace:ColorTextBlock.Avalonia;assembly=ColorTextBlock.Avalonia"
        xmlns:edit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
        xmlns:mdctl="clr-namespace:Markdown.Avalonia.Controls;assembly=Markdown.Avalonia"
        xmlns:mySpace="clr-namespace:MarkDownAvalonia.Controls;assembly=MarkDownAvalonia"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="720"
        x:Class="MarkDownAvalonia.MainWindow"
        Title="AvaDocsify" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" Icon="/Assets/issue.png">
    <Window.Styles>
        <Style Selector="Button.tab">
            <Setter Property="Background" Value="{Binding Path=ButtonBackground}" />
            <Setter Property="Foreground" Value="{Binding Path=ButtonForeground}" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
        </Style>
        
        <Style Selector="Button:pointerover.tab /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="10" />
        </Style>
        
        <Style Selector="Button:pointerover.logo /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style Selector="Button.logo">
            <Setter Property="Background" Value="{Binding Path=LogoButtonBackground}" />
            <Setter Property="Foreground" Value="{Binding Path=LogoButtonForeground}" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
        </Style>

        <Style Selector="ScrollBar">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{Binding Path=BodyBackground}" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style Selector="ToolTip">
            <Setter Property="Foreground" Value="{Binding Path=BodyForeground}" />
            <Setter Property="Background" Value="{Binding Path=BodyBackground}" />
        </Style>

        <Style Selector="PathIcon">
            <Setter Property="Foreground" Value="{Binding Path=ButtonForeground}" />
        </Style>

        <Style Selector="PathIcon.logo">
            <Setter Property="Foreground" Value="{Binding Path=LogoButtonForeground}" />
        </Style>

        <Style Selector="Button.tab:pointerover PathIcon">
            <Setter Property="Foreground" Value="{Binding Path=ActiveColor}" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style Selector="Border.logo">
            <Setter Property="Background" Value="{Binding Path=BodyForeground}" />
        </Style>

        <Style Selector="Button.logo:pointerover PathIcon.logo">
            <Setter Property="Foreground" Value="{Binding Path=ActiveColor}" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        
        <Style Selector="Button.logo:click Button.logo">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style Selector="Border.searchTbxBorder">
            <Setter Property="BorderThickness" Value="0 0 0 2" />
            <Setter Property="BorderBrush" Value="{Binding Path=BodyForeground}" />
        </Style>
        
        <Style Selector="StackPanel.infoBar">
            <Setter Property="Background" Value="silver" />
            <!-- <Setter Property="Foreground" Value="{Binding Path=bodyForeground}" /> -->
        </Style>
        
        <Style Selector="Label.tip">
            <Setter Property="Foreground" Value="white"></Setter>
            <Setter Property="FontSize" Value="8"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>
        
        <Style Selector="ContextMenu">
            <Setter Property="Background" Value="#312f2f"></Setter>
        </Style>
        
        <Style Selector="ContextMenu > MenuItem">
            <Setter Property="Foreground" Value="#FFFFFF"></Setter>
            <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
        </Style>
        
        <Style Selector="MenuItem:pointerover /template/ Border">
            <Setter Property="Background" Value="#FFFFFF"></Setter>
        </Style>
        
        <Style Selector="MenuItem:pointerover /template/ ContentPresenter">
            <Setter Property="Foreground" Value="#312f2f"></Setter>
        </Style>

        <Style Selector="ctxt|CImage.large">
            <Setter Property="LayoutWidth" Value="640"/>
            <Setter Property="LayoutHeight" Value="480"/>
        </Style>
        <Style Selector="ctxt|CImage.normal">
            <Setter Property="LayoutWidth" Value="320"/>
            <Setter Property="LayoutHeight" Value="240"/>
        </Style>
        <Style Selector="ctxt|CImage.small">
            <Setter Property="LayoutWidth" Value="240"/>
            <Setter Property="LayoutHeight" Value="180"/>
        </Style>
    </Window.Styles>

    <Border Name="mainBorder" Padding="5" Background="{Binding Path=BodyBackground}">
        <Grid Name="mainGrid">        
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>

